# Database Configuration
DATABASE_URL="mysql://user:password@host:3306/database_name"

# Environment Configuration
# Set to 'local' for localhost testing or 'production' for heron deployment
# This controls where the backend binds and where frontend API calls go
APP_ENV="production"

# API Configuration
# ====================
# Frontend API Base URL - Controls where the React frontend makes API calls
# 
# When developing locally (with backend on localhost):
#   VITE_API_URL=http://localhost:4000
# 
# When deploying to remote server (with backend on heron):
#   VITE_API_URL=http://heron:4000
#   OR leave it unset/empty to use the default fallback (http://heron:4000)
#
# The application uses centralized API configuration (src/config/api.ts) that:
# 1. Checks VITE_API_URL environment variable
# 2. Falls back to http://heron:4000 if not set
#
# This allows seamless switching between local dev and deployment without code changes.
VITE_API_URL=http://heron:4000
API_HOST="heron"
API_PORT=4000

# Azure AD Authentication (Optional)
# AZURE_CLIENT_ID="your-client-id"
# AZURE_TENANT_ID="your-tenant-id"
# AZURE_REDIRECT_URI="http://localhost:5173/auth/callback"

# Redis Cache (Optional)
# REDIS_HOST="localhost"
# REDIS_PORT=6379

# Session & Security
SESSION_SECRET="change-this-to-a-random-secret-in-production"
JWT_SECRET="change-this-to-a-random-secret-in-production"

# Email Configuration (if needed)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="noreply@example.com"
# SMTP_PASS="your-password"

# Application Settings
NODE_ENV="development"
LOG_LEVEL="info"

# Feature Flags
ENABLE_INNOVATION_HUB=true
ENABLE_PROCUREMENT=true
